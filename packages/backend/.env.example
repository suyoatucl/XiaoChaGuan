# Application
APP_NAME=XiaoChaGuan API
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# LLM APIs
CLAUDE_API_KEY=sk-ant-xxxxx
OPENAI_API_KEY=sk-xxxxx

# Vector Database
PINECONE_API_KEY=xxxxx
PINECONE_ENVIRONMENT=us-east-1
