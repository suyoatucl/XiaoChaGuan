{
  "icons": {
    "16": "./gen-assets/icon16.plasmo.png",
    "32": "./gen-assets/icon32.plasmo.png",
    "48": "./gen-assets/icon48.plasmo.png",
    "64": "./gen-assets/icon64.plasmo.png",
    "128": "./gen-assets/icon128.plasmo.png"
  },
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "./gen-assets/icon16.plasmo.png",
      "32": "./gen-assets/icon32.plasmo.png",
      "48": "./gen-assets/icon48.plasmo.png",
      "64": "./gen-assets/icon64.plasmo.png",
      "128": "./gen-assets/icon128.plasmo.png"
    }
  },
  "version": "0.1.0",
  "author": "Xiao Cha Guan Team",
  "name": "DEV | 小查馆 - Xiao Cha Guan",
  "description": "多语种事实核查浏览器插件 - Multilingual Fact-Checking Extension",
  "background": {
    "service_worker": "./static/background/index.ts"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "notifications",
    "idle"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.weibo.com/*",
        "https://*.weibo.cn/*",
        "https://*.zhihu.com/*",
        "https://*.toutiao.com/*",
        "https://*.douyin.com/*",
        "https://mp.weixin.qq.com/*",
        "https://*.bilibili.com/*",
        "https://*.xiaohongshu.com/*",
        "https://*.baidu.com/*",
        "<all_urls>"
      ],
      "js": [
        "..\\contents\\analyzer.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "fonts/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
