{
  "name": "xiaochaguan-extension",
  "displayName": "小查馆 - Xiao Cha Guan",
  "version": "0.1.0",
  "description": "多语种事实核查浏览器插件 - Multilingual Fact-Checking Extension",
  "author": "Xiao Cha Guan Team",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "package": "plasmo package",
    "test": "vitest"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.0",
    "@plasmohq/storage": "^1.9.0",
    "webextension-polyfill": "^0.10.0",
    "dexie": "^3.2.4",
    "nanoid": "^5.0.4",
    "mitt": "^3.0.1"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "^4.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.10.5",
    "@types/webextension-polyfill": "^0.10.7",
    "plasmo": "^0.84.0",
    "prettier": "^3.1.1",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "contextMenus",
      "storage",
      "tabs",
      "notifications",
      "idle"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*",
          "fonts/*"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
